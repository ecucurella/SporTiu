{% if round is null %}
    <div class="page-header">
        <h1>Round</h1>
    </div>
    <div class="alert alert-warning">
        There is no round with id {{ round_id }} !!
    </div>
{% else %}
    {% block roundheader %}
    <div class="page-header">
        <h1>{{ round.name }}</h1>
    </div>
    {% endblock %}
    {% if standings|length == 0 %}
    <div class="alert alert-warning">
        There are no games played for this round !!
    </div>
    {% else %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed" id="classification">
            <thead>
                <tr>
                    <th>POS</th>
                    <th>CLUB</th>
                    <th>P</th>
                    <th>W</th>
                    <th>L</th>
                    <th>D</th>
                    <th>GF</th>
                    <th>GA</th>
                    <th>GD</th>
                    <th>PTS</th>
                </tr>
            </thead>
            <tbody>
            {% for standing in standings %}
                <tr>
                    <td>{{ standing.position }}</td>
                    <td>{{ standing.club.abbreviation }}</td>
                    <td>{{ standing.gamesplayed }}</td>
                    <td>{{ standing.gameswin }}</td>
                    <td>{{ standing.gamesdraw }}</td>
                    <td>{{ standing.gamesdefeat }}</td>
                    <td>{{ standing.goalsfavorables }}</td>
                    <td>{{ standing.goalsagainst }}</td>
                    <td>{{ standing.goalsdifference }}</td>
                    <td>{{ standing.points }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
{% endif %}