{% extends '::base.html.twig' %}
{% block title %}Last games{% endblock %}
{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Last games</h1>
    </div>
    {% if games %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
	                <th>Date</th>
	                <th>Hour</th>
	                <th>Local</th>
	                <th>Visitor</th>
	                <th>Result</th>
	            </tr>
            </thead>
        	<tbody>
        	{% for game in games %}
        		<tr>
        		    <td>{{ game.gamedate|date('d-m-Y') }}</td>
        		    <td>{{ game.gamedate|date('H:i') }}</td>
        		{% if game.localpoints == game.visitorpoints %}
                    <td class="warning">{{ game.localclub.name}}</td>
                    <td class="warning">{{ game.visitorclub.name}}</td>
        		{% elseif game.localpoints > game.visitorpoints %}
                    <td class="success">{{ game.localclub.name}}</td>
                    <td class="danger">{{ game.visitorclub.name}}</td>	
        		{% else %}
                    <td class="danger">{{ game.localclub.name}}</td>
                    <td class="success">{{ game.visitorclub.name}}</td>        		
        		{% endif %}
        			<td><strong>{{ game.localpoints}} - {{ game.visitorpoints}}<strong></td>
                </tr>
        	{% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-info">
        There is no played games in database yet !!
    </div>
    {% endif %}
</div>
{% endblock  %}