{% block nextgameheader %}
    <div class="page-header">
        <h1>Next games</h1>
    </div>
{% endblock %}
{% if nextgames %}
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th></th>
                <th>Date</th>
                <th>Hour</th>
                <th>Local</th>
                <th>Visitor</th>
            </tr>
        </thead>
    	<tbody>
    	{% for nextgame in nextgames %}
    		<tr>
                <td><a href='{{ path("ecucurella_SporTiu_games_id", {id: nextgame.id}) }}'><span class="glyphicon glyphicon-plus" /></a></td>
    		    <td>{{ nextgame.gamedate|date('d-m-Y') }}</td>
                {% if nextgame.gamestate == 'SCHEDULED' %}
                    <td>{{ nextgame.gamedate|date('H:i') }}</td>
                {% else %}
                    <td></td>
                {% endif %}
                <td>{{ nextgame.localclub.name}}</td>
                <td>{{ nextgame.visitorclub.name}}</td>
            </tr>
    	{% endfor %}
        </tbody>
    </table>
</div>
{% else %}
<div class="alert alert-info">
    There is no scheduled games in database yet !!
</div>
{% endif %}