{% extends '::base.html.twig' %}
{% block title %}Next games{% endblock %}
{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Next games</h1>
    </div>
    {% if games %}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
	                <th>Date</th>
	                <th>Local</th>
	                <th>Visitor</th>
	            </tr>
            </thead>
        	<tbody>
        	{% for game in games %}
        		<tr>
        		    <td>{{ game.gamedate|date('d-m-Y') }}</td>
                    <td>{{ game.localclub.name}}</td>
                    <td>{{ game.visitorclub.name}}</td>
                </tr>
        	{% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="alert alert-info">
        There is no scheduled games in database yet !!
    </div>
    {% endif %}
</div>
{% endblock  %}